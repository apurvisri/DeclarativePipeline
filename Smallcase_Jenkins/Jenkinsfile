pipeline {
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/apurvisri/Docker.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build "myimage" + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Docker push'){
      steps{
         script { 
          docker.withRegistry('https://514836819662.dkr.ecr.ap-south-1.amazonaws.com', 'ecr:ap-south-1:apurvisri’) 
          {
          docker.image('myimage').push('latest')
          }
                }
            }
        }
    }
  }
  
